package screenShots;

import java.awt.AWTException;
import java.awt.Color;
import java.awt.Rectangle;
import java.awt.Robot;
import java.awt.Toolkit;
import java.awt.image.BufferedImage;

public class ScreenDetection {

	public static void main(String[] args) throws AWTException {
	        // 캡쳐할 화면 영역 설정
	        Rectangle screenRect = new Rectangle(Toolkit.getDefaultToolkit().getScreenSize());

	        // 화면 캡쳐
	        BufferedImage capture = new Robot().createScreenCapture(screenRect);

	        // 캡쳐된 이미지에서 특정 좌표의 RGB값 가져오기
	        int x1 = 765; int y1 = 700;
	        int x2 = 710; int y2 = 700;
	        int x3 = 665; int y3 = 700;
	        int x4 = 610; int y4 = 700;
	        
	        Color color1 = new Color(capture.getRGB(x1, y1));
	        

	        // RGB값 출력
	        System.out.println("RGB value of (" + x + ", " + y + "):");
	        System.out.println("Red: " + color.getRed());
	        System.out.println("Green: " + color.getGreen());
	        System.out.println("Blue: " + color.getBlue());
	    }
}




