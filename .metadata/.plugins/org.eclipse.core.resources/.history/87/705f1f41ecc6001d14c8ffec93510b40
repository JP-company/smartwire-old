package screenShots;

import java.awt.AWTException;
import java.awt.Color;
import java.awt.Rectangle;
import java.awt.Robot;
import java.awt.Toolkit;
import java.awt.image.BufferedImage;

import file.WireID;

public class ScreenDetection {

	public static boolean Restart() throws AWTException {
	        // 캡쳐할 화면 영역 설정
	        Rectangle screenRect = new Rectangle(Toolkit.getDefaultToolkit().getScreenSize());

	        // 화면 캡쳐
	        BufferedImage capture = new Robot().createScreenCapture(screenRect);

	        // 색 검출 좌표 설정
	        int[] x = {765, 710, 665, 610};
	        int y = -1;
	        if (WireID.getWireID().contains("sit")) { y = 700; }
	        else if (WireID.getWireID().contains("km")) { y = 690; }
	        
	        Color[] color = new Color[4];
	        
	        for (int i = 0; i < color.length; i++) {
	        	color[i] = new Color(capture.getRGB(x[i], y));
	        	if (color[i].getRed() != 0 || color[i].getBlue() != 0 || color[i].getGreen() != 255) {
	        		return false;
	        	}
	        }
	        
	        return true;
	    }
	
}




